<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6C3"
    tools:context=".TarifDetaySayfasi">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="781dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/malzemeleryazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="10dp"
                android:text="MALZEMELER"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/detaymalzeme"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TarifDetay"/>

            <TextView
                android:id="@+id/yapilisiyazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="10dp"
                android:text="YAPILIÅžI"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/detayyapilis"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TarifDetay"/>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6C3"
    tools:context=".KayitSayfasi">


    <Button
        android:id="@+id/ztnhsp"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="595dp"
        android:background="?android:selectableItemBackground"
        android:text="Giriş sayfasına geri dön."
        android:textAllCaps="false"
        android:textColor="#001A6C"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/isimsoyisim"
        android:layout_width="244dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="330dp"
        android:background="@drawable/btn_bg3"
        android:gravity="center"
        android:hint="İsim Soyisim"
        android:inputType="textPersonName"
        android:textColor="#FF009688"
        android:textColorHint="#009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="279dp" />

    <EditText
        android:id="@+id/mailadress"
        android:layout_width="244dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="385dp"
        android:background="@drawable/btn_bg3"
        android:ems="10"
        android:gravity="center"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#009688"
        android:textColor="#FF009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/sifre"
        android:layout_width="244dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="440dp"
        android:background="@drawable/btn_bg3"
        android:ems="10"
        android:gravity="center"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColor="#FF009688"
        android:textColorHint="#009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="176dp"
        android:layout_height="245dp"
        android:layout_marginVertical="35dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/kistasarim2" />

    <Button
        android:id="@+id/kayitolbtn"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="530dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="kayitol2"
        android:text="Kayıt Ol"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        app:backgroundTint="@null" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
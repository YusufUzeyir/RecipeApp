<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6C3"
    android:padding="20dp"
    tools:context=".TariflerSayfasi">


    <ScrollView
        android:layout_width="391dp"
        android:layout_height="725dp"
        tools:ignore="SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Kategoriler"
                android:textColor="#001A6C"
                android:textSize="35dp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="wrap_content"
                android:text="Ana yemekler"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/anayemek"
                    android:layout_width="383dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/anayemek3" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:text="Çorbalar"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/corbalar"
                    android:layout_width="383dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/corbalar" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:text="Salatalar"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/salatalar"
                    android:layout_width="383dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/salatalar" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:text="Vejeteryen Yemekler"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/vejeteryen"
                    android:layout_width="383dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/vejeteryenyemek" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:text="Tatlılar"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#001A6C"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/tatlilar"
                    android:layout_width="383dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/tatlilar" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>






    <ImageButton
        android:id="@+id/profilbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_person"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/tarifbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_food"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/profilimyasizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:text="Profilim"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tarifleryasizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_alignParentBottom="true"
        android:text="Tarifler"
        android:textStyle="bold" />

</RelativeLayout
    >
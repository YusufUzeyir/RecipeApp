<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F9E6C3"
    android:layout_height="match_parent"
    tools:context=".ProfilSayfasi">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="80dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Profil Bilgileri" />

    <TextView
        android:id="@+id/profifisimsoyisim"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="210dp"
        android:text="Adınız ve Soyadınız"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profilemail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="270dp"
        android:text="E-mail adresiniz"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cikissyapbutton"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="430dp"
        android:background="@drawable/btn_bg"
        android:text="Çıkış Yap"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/hesapsilbutton"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="520dp"
        android:background="@drawable/btn_bg"
        android:text="Hesabımı Sil"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/bilgiguncelle"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="610dp"
        android:background="@drawable/btn_bg"
        android:text="Bilgilerimi Güncelle"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        tools:ignore="TouchTargetSizeCheck" />




    <ImageButton
        android:id="@+id/profilbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_person"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/tarifbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_food"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/profilimyasizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Profilim"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tarifleryasizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Tarifler"
        android:textStyle="bold" />


</RelativeLayout>
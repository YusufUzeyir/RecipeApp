<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6C3"
    tools:context=".BilgiGuncellemeSayfasi">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="80dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="Bilgilerimi Güncelle" />


    <EditText
        android:id="@+id/isimguncelle"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="330dp"
        android:background="@drawable/btn_bg3"
        android:gravity="center"
        android:hint="İsim Soyisim"
        android:inputType="textPersonName"
        android:textColor="#FF009688"
        android:textColorHint="#009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="279dp" />

    <EditText
        android:id="@+id/mailguncelle"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="385dp"
        android:background="@drawable/btn_bg3"
        android:ems="10"
        android:gravity="center"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#009688"
        android:textColor="#FF009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/sifreguncelle"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="440dp"
        android:background="@drawable/btn_bg3"
        android:ems="10"
        android:gravity="center"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColor="#FF009688"
        android:textColorHint="#009688"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/guncellebtn"
        android:layout_width="186dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="530dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Bilgilerimi Güncelle"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        app:backgroundTint="@null" />

</RelativeLayout>
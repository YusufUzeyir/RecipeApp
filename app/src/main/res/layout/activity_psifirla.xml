<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6C3"
    tools:context=".ParolaSifirlamaSayfasi">



    <TextView
        android:id="@+id/textView3"
        android:layout_width="290dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="80dp"
        android:gravity="center"
        android:text="Parola Sıfırlama"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sifirlamamesaj"
        android:layout_width="364dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="250dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/parolasıfırlamesaj" />

    <EditText
        android:id="@+id/sifirlamamail"
        android:layout_width="319dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="370dp"
        android:background="@drawable/btn_bg3"
        android:hint="E-mail"
        android:textColor="#68A989"
        android:textColorHint="#68A989"
        android:gravity="center"
        android:ems="10"

        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/parolasifirlabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="460dp"
        android:background="@drawable/btn_bg"
        android:text="Parolamı Sıfırla"
        android:textAllCaps="false"
        android:textSize="17dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/sifirlamagirisyap"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="580dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif"
        android:onClick="girisyap"
        android:text="Giriş Yap"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="15sp"
        app:backgroundTint="@null"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>